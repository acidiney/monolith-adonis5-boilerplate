{
  "typescript": true,
  "commands": [
    "./commands",
    "@adonisjs/core/build/commands/index.js",
    "@adonisjs/repl/build/commands",
    "@adonisjs/lucid/build/commands",
    "@eidellev/inertia-adonisjs/build/commands",
    "@rocketseat/adonis-bull/build/commands",
    "@adonisjs/mail/build/commands"
  ],
  "exceptionHandlerNamespace": "app/infra/exceptions/handler",
  "aliases": {
    "app": "app",
    "config": "config"
  },
  "preloads": [
    {
      "file": "./start/i18n",
      "environment": [
        "web"
      ]
    },
    {
      "file": "./start/sentry",
      "environment": [
        "web"
      ]
    },
    {
      "file": "./start/inertia",
      "environment": [
        "web"
      ]
    },
    "./start/routes",
    "./start/kernel",
    "./start/bull"
  ],
  "providers": [
    "./providers/AppProvider",
    "@adonisjs/core",
    "@adonisjs/session",
    "@adonisjs/view",
    "@adonisjs/shield",
    "@adonisjs/lucid",
    "@adonisjs/i18n",
    "@eidellev/inertia-adonisjs",
    "@adonisjs/auth",
    "@adonisjs/lucid-slugify",
    "@rocketseat/adonis-bull",
    "@adonisjs/mail"
  ],
  "metaFiles": [
    {
      "pattern": "public/**",
      "reloadServer": false
    },
    {
      "pattern": "resources/views/**/*.edge",
      "reloadServer": false
    },
    {
      "pattern": "app/modules/**/*.(json|yaml)",
      "reloadServer": true
    },
    {
      "pattern": "resources/lang/**/*.(json|yaml)",
      "reloadServer": false
    }
  ],
  "aceProviders": [
    "@adonisjs/repl"
  ],
  "tests": {
    "suites": [
      {
        "name": "unit",
        "files": [
          "app/modules/**/*.adonis-spec.ts"
        ],
        "timeout": 60000
      }
    ]
  },
  "testProviders": [
    "@japa/preset-adonis/TestsProvider"
  ]
}